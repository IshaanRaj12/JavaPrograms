Averaging Numbers 

public class Main {
  
  public static double avgNum(double num1, double num2, double num3) {
    double sum = num1 + num2 + num3;
    double avg = sum/3;
    return avg;
  }

  public static void main(String args[]) {
    double avg = avgNum(99.9,34.4,56.6);
    System.out.println("The average of the three numbers is: "+ avg);
  }
}
